{
  "$schema": "./.ship/schema/ship.schema.json",
  "name": "demo-agent",
  "version": "1.0.0",
  "start": {
    "port": 3000,
    "host": "0.0.0.0",
    "interactiveWeb": false,
    "interactivePort": 3001
  },
  "llm": {
    "provider": "custom",
    "model": "${LLM_MODEL}",
    "baseUrl": "${LLM_BASE_URL}",
    "apiKey": "${LLM_API_KEY}",
    "temperature": 0.7
  },
  "skills": {
    "paths": [
      ".claude/skills"
    ]
  },
  "adapters": {
    "telegram": {
      "enabled": true,
      "botToken": "${TELEGRAM_BOT_TOKEN}",
      "chatId": "${TELEGRAM_CHAT_ID}"
    },
    "feishu": {
      "enabled": true,
      "appId": "${FEISHU_APP_ID}",
      "appSecret": "${FEISHU_APP_SECRET}",
      "domain": "https://open.feishu.cn"
    },
    "qq": {
      "enabled": true,
      "appId": "${QQ_APP_ID}",
      "appSecret": "${QQ_APP_SECRET}",
      "sandbox": true
    }
  }
}
